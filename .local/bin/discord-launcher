#!/usr/bin/env sh

#/usr/bin/discord --disable-gpu

DISCORD=$(basename $0)

[ $DISCORD == 'discord-launcher' ] && {
    echo "ln -s discord-launcher discord{,-ptb,-canary}"
    exit 0
}

export LIBVA_DRIVER_NAME=vdpau
export VDPAU_DRIVER=nvidia

exec /usr/bin/$DISCORD --disable-features=UseOzonePlatform --enable-accelerated-mjpeg-decode \
    $(cat ~/.config/chromium-flags.conf | paste -sd' ')
