#!/usr/bin/env sh

#/usr/bin/discord --disable-gpu

DISCORD=$(basename $0)

[ $DISCORD == 'discord-launcher' ] && {
    echo "ln -s discord-launcher discord{,-ptb,-canary}"
    exit 0
}

/usr/bin/$DISCORD --ignore-gpu-blocklist --disable-features=UseOzonePlatform --enable-features=VaapiVideoDecoder --use-gl=desktop --enable-gpu-rasterization --enable-zero-copy
